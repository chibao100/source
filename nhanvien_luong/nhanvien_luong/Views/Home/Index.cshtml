    <script>


        function validate_add() {
            var ma = $('#ma1').val();
            var ten = $('#ten1').val();
            var ngaysinh = $('#ngaysinh1').val();
            var ngayvaolam = $('#ngayvaolam1').val();
            var diachi = $('#diachi1').val();
            var cmnd = $('#cmnd1').val();
            //
            if (ma == "") {
                alert("Mã nhân viên không được để trắng");
                return false;
            }
            if (ten == "") {
                alert("Tên nhân viên không được để trắng");
                return false;
            }
            if (ngaysinh == "") {
                alert("Ngày sinh nhân viên không được để trắng");
                return false;
            }
            if (ngayvaolam == "") {
                alert("Ngày vào làm nhân viên không được để trắng");
                return false;
            }
            if (diachi == "") {
                alert("Địa chỉ nhân viên không được để trắng");
                return false;
            }
            if (cmnd == "") {
                alert("Số chứng minh nhân dân không được để trắng");
                return false;
            }
            //
            var test_date = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/g;
            var date_start2 = moment(ngaysinh, "DD/MM/YYYY");
            if (!test_date.test(ngaysinh) || !date_start2.isValid()) {
                alert("Ngày sinh nhân viên không hợp lệ");
                return false;
            }
            //
            var date_start3 = moment(ngayvaolam, "DD/MM/YYYY");
            var test_date2 = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/g;
            if (!test_date2.test(ngayvaolam) || !date_start3.isValid()) {
                alert("Ngày vào làm nhân viên không hợp lệ");
                return false;
            }

            if (date_start2.isSame(date_start3) == true || date_start2.isBefore(date_start3) == false) {
                alert("Ngày vào làm không hợp lệ");
                return false;
            }



            check(ma);
                
            
            //
            return false;
        }
      
        function validate_update_canhan() {
            var ten = $('#ten3').val();
            var ngaysinh = $('#ngaysinh3').val();
            var ngayvaolam = $('#ngayvaolam3').val();
            var diachi = $('#diachi3').val();
            var cmnd = $('#cmnd3').val();
            //
            if (ten == "") {
                alert("Tên nhân viên không được để trắng");
                return false;
            }
            if (ngaysinh == "") {
                alert("Ngày sinh nhân viên không được để trắng");
                return false;
            }
            if (ngayvaolam == "") {
                alert("Ngày vào làm không được để trắng");
                return false;
            }

            if (diachi == "") {
                alert("Địa chỉ nhân viên không được để trắng");
                return false;
            }
            if (cmnd == "") {
                alert("Số chứng minh nhân dân không được để trắng");
                return false;
            }
            //
            var test_date = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/g;
            var date_start2 = moment(ngaysinh, "DD/MM/YYYY");
            if (!test_date.test(ngaysinh) || !date_start2.isValid()) {
                alert("Ngày sinh nhân viên không hợp lệ");
                return false;
            }

            var date_start3 = moment(ngayvaolam, "DD/MM/YYYY");
            var test_date2 = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/g;
            if (!test_date2.test(ngayvaolam) || !date_start3.isValid()) {
                alert("Ngày vào làm nhân viên không hợp lệ");
                return false;
            }

            if (date_start2.isSame(date_start3) == true || date_start2.isBefore(date_start3) == false) {
                alert("Ngày vào làm không hợp lệ");
                return false;
            }

            return true;
            
        }
        function check(manhanvien) {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("CheckAccount", "Home")',
                data: { manhanvien: manhanvien },
                success: function (result) {
                    if (result.count == 0) {
                        $('#form_add').submit(new function () { document.getElementById("form_add").submit(); });
                        
                    } else {
                        alert("Mã nhân viên đã tồn tại");
                    }
                },
                dataType: 'json'
            });
        }

        function validate_update_chucvu() {
            var ngay = $('#ngaychucvu_update_chucvu').val();
            var ngayvaolam = $('#ngayvaolam4').val();
            
            if (ngay == "") {
                alert("Ngày nhận chức không được để trắng");
                return false;
            }
            //
            var test_date = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/g;
            var date_start2 = moment(ngay, "DD/MM/YYYY");
            if (!test_date.test(ngay) || !date_start2.isValid()) {
                alert("Ngày nhận chức không hợp lệ");
                return false;
            }
            var date_start3 = moment(ngayvaolam, "DD/MM/YYYY");
            
            if (date_start2.isSame(date_start3) == false) {
              
                if (date_start2.isBefore(date_start3) == true) {
                    alert("Ngày nhận chức không hợp lệ. Ngày nhận chức phải lớn hơn hoặc bằng ngày vào làm ");
                    return false;
                }
            }

            
          
            return true;
        }

        function validate_update_ngach() {
            var ngay = $('#ngay_update_ngach').val();
            var ngayvaolam = $('#ngayvaolam5').val();
            if (ngay == "") {
                alert("Ngày nhận chức không được để trắng");
                return false;
            }
            //
            var test_date = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/g;
            var date_start2 = moment(ngay, "DD/MM/YYYY");
            if (!test_date.test(ngay) || !date_start2.isValid()) {
                alert("Ngày nhận chức không hợp lệ");
                return false;
            }
            var date_start3 = moment(ngayvaolam, "DD/MM/YYYY");

            if (date_start2.isSame(date_start3) == false) {

                if (date_start2.isBefore(date_start3) == true) {
                    alert("Ngày nhận chức không hợp lệ. Ngày nhận chức phải lớn hơn hoặc bằng ngày vào làm ");
                    return false;
                }
            }
            return true;
        }

        
