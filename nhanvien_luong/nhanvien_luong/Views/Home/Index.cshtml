    function CapnhatNgach(id, ma, ten, ngach, bac, ngayvaolam){
        $('#id5').val(id);
        $('#ma5').text(ma);
        $('#ten5').text(ten);
        if (ngach == "Không có") {
            $('#ngach_bac5').text("Không có");
        } else {
            $('#ngach_bac5').text(ngach + ' - Bậc: ' + bac);
        }
        
        $('#ngayvaolam5').val(ngayvaolam);
