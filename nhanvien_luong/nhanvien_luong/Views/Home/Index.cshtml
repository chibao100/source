    function Xoa(id, ma, ten) {
        $('#id6').val(id);
        $('#ma6').text(ma);
        $('#ten6').text(ten);
    }
    
    //
    var pagenum = 1;

    function TakeData(j) {
        var ma = $('#ma').val();
        var ten = $('#ten').val();
        var rowperpage = $('#rowperpage').val();

        var re = /^[1-9][0-9]{0,1}$/g;
        if (re.test(rowperpage) == false) {
            alert("Hiển thị là một số nguyên từ 1 đến 99");
            return;
        }

        pagenum = j;
        //
        $.ajax({
            type: 'GET',
            url: '@Url.Action("TakeData", "Home")',
            data: { ma: ma, ten: ten, page: pagenum, row_perpage: rowperpage },
            success: function (result) {
                $("#danhsach_nhanvien").children().remove();
                if (result.data.length == 0) {
                    $('.btn-group').html('');
                }
                for (var i = 0; i < result.data.length; i++) {
                  
                    var row = '<tr>';
                    row = row + '<td>' + result.data[i].ma + '</td>';
                    row = row + '<td>' + result.data[i].ten + '</td>';
                    var h = "";
                    var h2 = result.data[i].ngach;
                    for (var j = 0; j < result.data[i].chucvu.length; j++) {
                        if (result.data[i].chucvu[j] != null) {
                            h = h + result.data[i].chucvu[j] + '<br>';
                        }
                    }
                        
                    if (h == "") {
                        h = "Không có";
                    }

                    if (h2 == "") {
                        h2 = "Không có";
                    }
                    
                    row = row + '<td>' + h + '</td>';
                    row = row + '<td>' + h2 + '</td>';
                    //
                    row = row + '<td>' + '<a href="/LichSuCongTac/id=' + result.data[i].id + '" target="_blank" >Xem</a>' + '</td>';
                    row = row + '<td>';
                    row = row + "<button type='button' onclick='Chitiet(\"" + result.data[i].ma + "\",\"" + result.data[i].ten + "\",\"" + result.data[i].gioi_tinh + "\",\"" + result.data[i].ngay_sinh + "\",\"" + result.data[i].dan_toc + "\",\"" + result.data[i].ngay_vao_lam + "\",\"" + result.data[i].dia_chi + "\",\"" + result.data[i].so_cmnd + "\",\"" + h + "\",\"" + h2 + "\",\"" + result.data[i].bac + "\");' class='btn btn-primary' data-toggle='modal' data-target='#ModalDetail'>Chi Tiết</button>";
                    row = row + '</td>';

                    row = row + '<td>';
                    row = row + '<div class="dropdown">';
                    row = row + '<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">';
                    row = row + 'Cập nhật';
                    row = row + '<span class="caret"></span>';
                    row = row + '</button>';
                    row = row + '<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">';
                    row = row + "<li><a href='#' onclick='CapnhatCaNhan(\"" + result.data[i].id + "\",\"" + result.data[i].ma + "\",\"" + result.data[i].ten + "\",\"" + result.data[i].gioi_tinh + "\",\"" + result.data[i].ngay_sinh + "\",\"" + result.data[i].dan_toc + "\",\"" + result.data[i].ngay_vao_lam + "\",\"" + result.data[i].dia_chi + "\",\"" + result.data[i].so_cmnd + "\");' data-toggle='modal' data-target='#ModalUpdateCaNhan' >Thông tin cá nhân</a></li>";
                    row = row + "<li><a href='#' onclick='CapnhatChucVu(\"" + result.data[i].id + "\",\"" + result.data[i].ma + "\",\"" + result.data[i].ten + "\",\"" + h + "\",\"" + result.data[i].ngay_vao_lam + "\");' data-toggle='modal' data-target='#ModalUpdateChucVu' >Chức vụ</a></li>";
                    row = row + "<li><a href='#' onclick='CapnhatNgach(\"" + result.data[i].id + "\",\"" + result.data[i].ma + "\",\"" + result.data[i].ten + "\",\"" + h2 + "\",\"" + result.data[i].bac + "\", \"" + result.data[i].ngay_vao_lam + "\");' data-toggle='modal' data-target='#ModalUpdateNgach' >Ngạch</a></li>";
                    row = row + '</ul>';
                    row = row + '</div>';
                    row = row + '</td>';
  

                    row = row + '<td>';
                    row = row + "<button type='button' onclick='Xoa(\"" + result.data[i].id + "\",\"" + result.data[i].ma + "\",\"" + result.data[i].ten + "\");'  class='btn btn-primary' data-toggle='modal' data-target='#ModalDelete'>Xóa</button>";
                    row = row + '</td>';
                   
                    row = row + '</tr>';
                    $('#danhsach_nhanvien').append(row);
                }
                //link
                var maxpage = Math.ceil(parseFloat(result.count) / rowperpage);
                var s = '';
                for (var i = -3; i < 5; i++) {
                    var j = pagenum + i;
                    if (j >= 1 && j <= maxpage) {
                        if (j == pagenum) {
                            var bt = '<button onclick="TakeData(' + j + ')" type="button" class="btn btn-default" style="color:red">' + j + '</button>';
                            s = s + bt;
                        } else {
                            var bt = '<button onclick="TakeData(' + j + ')" type="button" class="btn btn-default">' + j + '</button>';
                            s = s + bt;
                        }
                    }
                }
                $('.btn-group').html(s);
            }
        });

    }

        $(document).ready(function () {
            TakeData(1);
            $('#ngach').change(function () {
                var idngach = $('#ngach').val();
                if (idngach == "0") {
                    
                    $('#bac').css('visibility', 'hidden');
                    
                } else {
                    $('#bac').css('visibility', 'visible');
                }
            });
            
            
        });

    </script>


